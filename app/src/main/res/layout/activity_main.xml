<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mainText"
        style="@style/TextPole"
        android:text="0"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@+id/btnAC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.639"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnAC"
        style="@style/ActionButton"
        android:layout_marginEnd="8dp"
        android:text="AC"
        app:backgroundTint="#a7a7a7"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPlusMinus"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229" />

    <Button
        android:id="@+id/btnPlusMinus"
        style="@style/ActionButton"
        android:layout_marginEnd="10dp"
        android:text="±"
        app:backgroundTint="#a7a7a7"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSignChange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229" />

    <Button
        android:id="@+id/btnSignChange"
        style="@style/ActionButton"
        android:layout_marginEnd="9dp"
        android:text="%"
        app:backgroundTint="#a7a7a7"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDivide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229" />

    <Button
        android:id="@+id/btnSeven"
        style="@style/ActionButton1"
        android:text="7"
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAC"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnEight"
        style="@style/ActionButton1"
        android:text="8"
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNine"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlusMinus"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnNine"
        style="@style/ActionButton1"
        android:text="9"
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnMultiply"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignChange"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="85dp"
        android:layout_height="95dp"
        android:text="×"
        android:backgroundTint="#FF9800"
        android:textSize="34sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDivide"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/btnFour"
        style="@style/ActionButton1"
        android:text="4"
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnFive"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSeven"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/btnFive"
        style="@style/ActionButton1"
        android:text="5"
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSix"
        app:layout_constraintTop_toBottomOf="@+id/btnEight"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/btnSix"
        style="@style/ActionButton1"
        android:text="6"
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnMinus"
        app:layout_constraintTop_toBottomOf="@+id/btnNine"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/btnMinus"
        style="@style/ActionButton1"
        android:layout_marginEnd="22dp"
        android:text="-"
        android:backgroundTint="#FF9800"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiply"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnDivide"
        style="@style/ActionButton1"
        android:layout_marginEnd="22dp"
        android:backgroundTint="#FF9800"
        android:text="÷"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229" />

    <Button
        android:id="@+id/btnOne"
        style="@style/ActionButton1"
        android:text="1"
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTwo"
        app:layout_constraintTop_toBottomOf="@+id/btnFour"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnTwo"
        style="@style/ActionButton1"
        android:text="2"
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnThree"
        app:layout_constraintTop_toBottomOf="@+id/btnFive"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnThree"
        style="@style/ActionButton1"
        android:text="3"
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPlus"
        app:layout_constraintTop_toBottomOf="@+id/btnSix"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/btnPlus"
        style="@style/ActionButton1"
        android:layout_marginEnd="22dp"
        android:text="+"
        android:backgroundTint="#FF9800"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMinus"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/btnZero"
        style="@style/ActionButton1"
        android:layout_width="181dp"
        android:text="0"
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnComma"
        app:layout_constraintTop_toBottomOf="@+id/btnTwo"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/btnComma"
        style="@style/ActionButton1"
        android:text=","
        app:backgroundTint="#333333"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEquals"
        app:layout_constraintTop_toBottomOf="@+id/btnThree"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/btnEquals"
        style="@style/ActionButton1"
        android:layout_marginEnd="22dp"
        android:text="="
        android:backgroundTint="#FF9800"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlus"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>